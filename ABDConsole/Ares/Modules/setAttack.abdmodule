#!/bin/bash
# Set Attack module for AresBD by Stsosz
source ~/Ares/aresbd.conf
setAttack()
{
	PS3=$ATTACKPROMPT
	attackoptions=("Shell" "Script")
	select opt in "${attackoptions[@]}"
	do
	    case $opt in
	        "Shell")
	            ATTACKMODE=Shell
				PS3=$MENUPROMPT
				break
	            ;;
	        "Script")
	            ATTACKMODE=Script
				PS3=$MENUPROMPT
				break
	            ;;
	        *) echo invalid option;;
	    esac
	done
}