echo "Loading setAttack.abdmodule... \c"
setAttack()
{
	PS3=$ATTACKPROMPT
	select opt in "${attackoptions[@]}"
	do
	    case $opt in
	        "Shell")
	            ATTACKMODE=Shell
				break
	            ;;
	        "Script")
	            ATTACKMODE=Script
				break
	            ;;
	        *) echo invalid option;;
	    esac
	done
PS3=$MENUPROMPT
}
echo "Done."
