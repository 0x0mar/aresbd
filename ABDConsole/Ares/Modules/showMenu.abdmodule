echo -e "Loading showMenu.abdmodule... \c"
showMenu()
{
    select opt in "${mainoptions[@]}"
    do
        case $opt in
            "Set Port")
                setPort
                echo ""
                ;;
            "Set Script")
                setScript
                echo ""
                ;;
            "Set Attack Mode")
                setAttack
                echo ""
                ;;
            "Show Options")
                showOpts
                echo ""
                ;;
            "Start Attack")
                attackLogic
                echo ""
                ;;
            "Quit")
                break
                ;;
            "Help")
                showHelp
                echo ""
			;;
            *) echo invalid option;;
        esac
    done
}
echo "Done."
